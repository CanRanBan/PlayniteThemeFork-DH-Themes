    <Style x:Key="RatingBorder" TargetType="ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <ControlTemplate.Resources>
                        <sys:Double x:Key="HalfWidth">8</sys:Double>
                        <sys:Double x:Key="Width">16</sys:Double>
                        <sys:Double x:Key="Height">16</sys:Double>
                        <sys:String x:Key="_10StarString">&#xF000;&#xF000;&#xF000;&#xF000;&#xF000;</sys:String>
                    </ControlTemplate.Resources>
                    <Grid>
                        <TextBlock Text="{StaticResource _10StarString}" Height="{DynamicResource Height}" FontFamily="{StaticResource FontIcoFont}"
                                   FontSize="{DynamicResource Height}"
                                   Foreground="White" Opacity="0.3"/>
                        <TextBlock Text="{StaticResource _10StarString}" Height="{DynamicResource Height}" FontFamily="{StaticResource FontIcoFont}"
                                   FontSize="{DynamicResource Height}"
                                   Foreground="White">
                            <TextBlock.OpacityMask>
                                <VisualBrush AutoLayoutContent="True" Stretch="Fill" AlignmentX="Left">
                                    <VisualBrush.Visual>
                                        <StackPanel Orientation="Horizontal" Height="{DynamicResource Height}">
                                            <Border x:Name="_1Star" Background="Transparent" Width="{DynamicResource HalfWidth}"/>
                                            <Border x:Name="_2Star" Background="Transparent" Width="{DynamicResource HalfWidth}"/>
                                            <Border x:Name="_3Star" Background="Transparent" Width="{DynamicResource HalfWidth}"/>
                                            <Border x:Name="_4Star" Background="Transparent" Width="{DynamicResource HalfWidth}"/>
                                            <Border x:Name="_5Star" Background="Transparent" Width="{DynamicResource HalfWidth}"/>
                                            <Border x:Name="_6Star" Background="Transparent" Width="{DynamicResource HalfWidth}"/>
                                            <Border x:Name="_7Star" Background="Transparent" Width="{DynamicResource HalfWidth}"/>
                                            <Border x:Name="_8Star" Background="Transparent" Width="{DynamicResource HalfWidth}"/>
                                            <Border x:Name="_9Star" Background="Transparent" Width="{DynamicResource HalfWidth}"/>
                                            <Border x:Name="_10Star" Background="Transparent" Width="{DynamicResource HalfWidth}"/>
                                        </StackPanel>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </TextBlock.OpacityMask>
                        </TextBlock>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding .}" Value="{x:Static ScoreGroup.O0x}">
                            <Setter Property="Background" TargetName="_1Star" Value="Black"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding .}" Value="{x:Static ScoreGroup.O1x}">
