                            <Setter Property="Background" TargetName="_2Star" Value="Black"/>
                            <Setter Property="Background" TargetName="_3Star" Value="Black"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding .}" Value="{x:Static ScoreGroup.O3x}">
