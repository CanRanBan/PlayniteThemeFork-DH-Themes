                            <Setter Property="Background" TargetName="_3Star" Value="Black"/>
                            <Setter Property="Background" TargetName="_4Star" Value="Black"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding .}" Value="{x:Static ScoreGroup.O4x}">
