                                            <TranslateTransform Y="{Binding ActualHeight, ElementName=BackgroundMask}"/>
                                        </TransformGroup>
                                    </VisualBrush.Transform>
                                </VisualBrush>
                            </Image.OpacityMask>
                            <Image.Effect>
                                <BlurEffect Radius="5" KernelType="Gaussian"/>
                            </Image.Effect>
                        </Image>
                        
